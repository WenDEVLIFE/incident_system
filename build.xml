<?xml version="1.0" encoding="UTF-8"?>
<project name="student" default="default" basedir=".">
    <description>Builds, tests, and runs the project student.</description>

    <!-- Define classpath -->
    <path id="project.classpath">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- Clean target -->
    <target name="clean">
        <delete dir="build"/>
    </target>

    <!-- Compile target -->
    <target name="compile" depends="clean">
        <mkdir dir="build"/>
        <javac srcdir="src" destdir="build" classpathref="project.classpath"/>
    </target>

    <!-- Run target -->
    <target name="run" depends="compile">
        <java classname="com.example.Main" classpath="build:${toString:project.classpath}">
            <arg value="arg1"/>
        </java>
    </target>
</project>